<!DOCTYPE html>
<html>
  <head>
    <title><%= pkg.name %></title>

    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
  </head>
  <body>
    <script type="text/javascript" src="<%= js %>"></script>
    <h1>color mixing</h1>
    <hr>
    <section id="sliders">
      <div class="red slider">
        <input type="range" min="0" max="255" value="100"/>
        <div class="number"></div>
      </div>
      <div class="blue slider">
        <input type="range" min="0" max="255" value="200"/>
        <div class="number"></div>
      </div>
      <div class="green slider">
        <input type="range" min="0" max="255" value="43"/>
        <div class="number"></div>
      </div>
    </div>
    <section id="swatch">RED</section>
  </body>
</html>
